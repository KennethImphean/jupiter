{
  "name": "nebula-jupiter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register -r tsconfig-paths/register 'tests/**/*.ts' -r dotenv/config"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.29.3",
    "@trpc/client": "^10.21.1",
    "@trpc/next": "^10.21.1",
    "@trpc/react-query": "^10.21.1",
    "@trpc/server": "^10.21.1",
    "dotenv": "^16.0.3",
    "firebase": "^9.14.0",
    "fuse.js": "^6.6.2",
    "next": "^13.3.1",
    "next-auth": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "superjson": "^1.12.2",
    "ts-node": "^10.9.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@tailwindcss/typography": "^0.5.9",
    "@types/chai": "^4.3.4",
    "@types/eslint": "^8.21.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.16.0",
    "@types/react": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "autoprefixer": "^10.4.4",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "mocha": "^10.2.0",
    "postcss": "^8.4.12",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.2"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write",
    "*.{tsx,ts,js}": [
      "eslint --cache --fix .",
      "prettier --write {pages,components,modules}/**/*.{tsx,ts,js}"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
